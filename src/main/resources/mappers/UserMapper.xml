<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csr.csrcheck.mapper.UserMapper">
    <sql id="userid">
        `user_id`,`user_name`,`password`,`user_roleid`,`user_sex`,`user_age`,
        `user_address`,`create_people`,`create_time`
    </sql>
    
    <select id="findUser_name" resultType="com.csr.csrcheck.pojo.User">
     select
     <include refid="userid"></include>
     from user
     where user_name=#{user_name}
    </select>
</mapper>